		  <compare value1="$UserTurn.Valence.nrHighEvents" comparator="smaller_equals" value2="0" />
		  <compare value1="$UserTurn.Valence.max" comparator="greater_than" value2="-0.06" />
		  <compare value1="$Agent.character" value2="Spike" />
