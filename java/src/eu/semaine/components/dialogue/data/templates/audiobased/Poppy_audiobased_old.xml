	<template id="rule_00" name="Happy Rule">
		<preconditions>
		  <indicator startvalue="0" comparator="greater_equals" endvalue="2" >
		  	<icompare value1="$#_high_intensity" comparator="greater_than" value2="0" modifier="+1" />
