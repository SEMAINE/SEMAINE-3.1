<behaviourtemplates xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3schools.com template.xsd">

	<template id="rule_00" name="Sad Rule">
		<preconditions>
		  <compare value1="$LOGEnergy_min" comparator="lesser_equals" value2="-21" />
		  <compare value1="$#_low_arousal" comparator="lesser_equals" value2="1" />
		  <compare value1="$pitchDirScore_min" comparator="greater_equals" value2="-100" />
		  <compare value1="$pitchDirScore_avg" comparator="greater_equals" value2="0" />
		</preconditions>
	
	   	<effects>
	      <update name="class" value="Sad" />
	   	</effects>
	   
	   	<behaviour class="behaviourselection.behaviours.ExampleBehaviour" quality="0.8">
	   	</behaviour>
	</template>
	
