# Turn-taking thresholds (a lower value means a character will start speaking faster)
TurnTakingThreshold_Poppy= 60
TurnTakingThreshold_Prudence= 80
TurnTakingThreshold_Spike= 30
TurnTakingThreshold_Obadiah= 100

# Utterance-models to use
afterSilence_model= true
linkingSentences_model= true
context_model= true
arousal_model= true
history_correction= true

# Introduction properties
# With the briefing turned on Sal will explain what she is and which characters can be chosen when the system starts
briefing= false
# The introduction is the startup-script of the system, this can either be 'long' or 'short'
introduction= short

# Logging
logging= true

# The location of the sentences-file and the context-file
sentences_file= /eu/semaine/components/dialogue/data/sentences.xml
context_file= /eu/semaine/components/dialogue/data/Context.csv

response_file = /eu/semaine/components/dialogue/data/responses.xml
