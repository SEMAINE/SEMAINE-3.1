<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE erl SYSTEM "erl.dtd" [] >
<erl>
<!-- peut-Ãªtre appel au document library.xml par <xsl:param name="choosedAgent">agent.xml</xsl:param> -->
<!-- puis pour lire ce fichier <xsl:variable name="agent" select=document($choosedAgent)/agentDefinition" /> -->
<!-- idem pour library -->
<library>
	<expression name="greet1" meaning="joy">
		<composedSignal id="cs1" name="slight_joy" nbSimpleSignals="2">
			<simpleSignal id="f1" name="slight_joy" modality="face"/>
			<simpleSignal id="ge1" name="hand_up" modality="gesture"/>
		</composedSignal>
		<simpleSignal id="f4" name="large_smile" modality="face"/>
		<simpleSignal id="g3" name="joy_eyelids" modality="gaze"/>
	</expression>
</library>

<agentDefinition name="Agent1" gender="male" age="20" hand="right" origin="native">
	<!-- global expressivity -->
	<descriptionFactors fluidity="0.2" spatial="0.5" temporal="0.3" power="1" repetitivity="0" overallActivity="1"/>
	<!-- for lips movement {low, medium, strong} -->
	<articulationParam tension="strong" articulation="medium"/>
	<!-- which modality agent prefers to use -->
	<modalityHierarchy>
	<face value="0.9"/>
	<gesture value="0.5"/>
	<posture value="0.3"/>
	<gaze value="0.4"/>
	<head value="0.4"/>
	</modalityHierarchy>
	<!-- factor of scalability for the global expressivity of each modality -->
	<modalityFactorExp>
	<face value="1.0"/>
	<gesture value="0.5"/>
	<posture value="0.3"/>
	<gaze value="0.4"/>
	<head value="0.4"/>
	</modalityFactorExp>
</agentDefinition>

<agentSketch lang="en">
	<performative type="announce">
		<signalList>
		  <composedSignal>
			<simpleSignal id="g1">
				<localExp spatial="0.91" temporal="0.9" power="0.8" fluidity="0.9" repetitivity="1" />
			</simpleSignal>
			<simpleSignal id="f2">
				<localExp spatial="1" temporal="0.5" power="0.5" fluidity="0.9" repetitivity="2" />
			</simpleSignal>
		  </composedSignal>
		</signalList>
		<rheme>
			Whatever works for
			<emphasis x-pitchaccent="Hstar" deictic="you">
				<signalList>
					<simpleSignal id="g1">
						<localExp spatial="0.91" temporal="0.9" power="0.8" fluidity="0.9" repetitivity="1" />
					</simpleSignal>
				</signalList>
			you
			</emphasis>
		</rheme>
		<theme>
			thats for
			<emphasis>
				<signalList>
				  <simpleSignal id="f3">
					<localExp spatial="1" temporal="1" power="-0.5" fluidity="1" repetitivity="1" />
				  </simpleSignal>
				  <simpleSignal id="g1">
					<localExp spatial="0.72" temporal="1" power="0.54" fluidity="1" repetitivity="0" />
				  </simpleSignal>
				</signalList>
				you
			</emphasis>
		</theme>
	</performative>
</agentSketch>

</erl>